{{#if addNewAnnouncement}}
  <div>
   <form>
     <div class="form-group">
       <label for="text">Announcement Text</label>
       {{input value=text id="text"}}
     </div>

     <div class="form-group">
       <label for="type">Announcement Category</label>
       {{input value=category id="category"}}
     </div>
     <button {{action 'saveNewAnnouncement'}}>Save</button>
   </form>
  </div>
 {{else}}
    <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
